<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo Certificate 1: Draft State -->
        <record id="demo_certificate_1" model="gr.certificate">
            <field name="name">CERT001</field>
            <field name="student_id" ref="demo_student_5"/>
            <field name="certificate_title">English Language Proficiency Certificate</field>
            <field name="certificate_type">completion</field>
            <field name="state">draft</field>
            <field name="certificate_description">Certificate of completion for English Language Course</field>
            <field name="course_name">English Language Proficiency</field>
            <field name="issue_date" eval="(DateTime.now() - relativedelta(months=1)).strftime('%Y-%m-%d')"/>
        </record>
        
        <!-- Demo Certificate 2: Achievement State -->
        <record id="demo_certificate_2" model="gr.certificate">
            <field name="name">CERT002</field>
            <field name="student_id" ref="demo_student_6"/>
            <field name="certificate_title">Advanced English Communication Certificate</field>
            <field name="certificate_type">achievement</field>
            <field name="state">issued</field>
            <field name="issue_date" eval="(DateTime.now() - relativedelta(days=20)).strftime('%Y-%m-%d')"/>
            <field name="certificate_description">Certificate for achieving advanced level in English communication</field>
            <field name="course_name">Advanced English Communication</field>
            <field name="final_grade" eval="85.5"/>
        </record>
        
        <!-- Demo Certificate 3: Issued State -->
        <record id="demo_certificate_3" model="gr.certificate">
            <field name="name">CERT003</field>
            <field name="student_id" ref="demo_student_7"/>
            <field name="certificate_title">Business English Professional Certificate</field>
            <field name="certificate_type">professional</field>
            <field name="state">issued</field>
            <field name="issue_date" eval="(DateTime.now() - relativedelta(days=15)).strftime('%Y-%m-%d')"/>
            <field name="certificate_description">Professional certificate in Business English communication</field>
            <field name="course_name">Business English Professional</field>
            <field name="final_grade" eval="90.0"/>
        </record>
        
        <!-- Demo Certificate 4: Verified State -->
        <record id="demo_certificate_4" model="gr.certificate">
            <field name="name">CERT004</field>
            <field name="student_id" ref="demo_student_8"/>
            <field name="certificate_title">English Language Excellence Certificate</field>
            <field name="certificate_type">excellence</field>
            <field name="state">verified</field>
            <field name="issue_date" eval="(DateTime.now() - relativedelta(days=10)).strftime('%Y-%m-%d')"/>
            <field name="verified_date" eval="(DateTime.now() - relativedelta(days=5)).strftime('%Y-%m-%d')"/>
            <field name="certificate_description">Excellence certificate in English language proficiency</field>
            <field name="course_name">English Language Excellence</field>
            <field name="final_grade" eval="95.0"/>
            <field name="verification_code">VER-ABC123</field>
        </record>
        
        <!-- Demo Certificate 5: Revoked State -->
        <record id="demo_certificate_5" model="gr.certificate">
            <field name="name">CERT005</field>
            <field name="student_id" ref="demo_student_1"/>
            <field name="certificate_title">English Foundation Certificate</field>
            <field name="certificate_type">participation</field>
            <field name="state">revoked</field>
            <field name="issue_date" eval="(DateTime.now() - relativedelta(months=2)).strftime('%Y-%m-%d')"/>
            <field name="certificate_description">Foundation level certificate in English language</field>
            <field name="course_name">English Foundation</field>
            <field name="notes">Revoked due to academic misconduct detected during verification</field>
        </record>
        
        <!-- Demo Certificate 6: Expired State -->
        <record id="demo_certificate_6" model="gr.certificate">
            <field name="name">CERT006</field>
            <field name="student_id" ref="demo_student_2"/>
            <field name="certificate_title">English Communication Certificate</field>
            <field name="certificate_type">participation</field>
            <field name="state">expired</field>
            <field name="issue_date" eval="(DateTime.now() - relativedelta(months=7)).strftime('%Y-%m-%d')"/>
            <field name="valid_from" eval="(DateTime.now() - relativedelta(months=7)).strftime('%Y-%m-%d')"/>
            <field name="valid_until" eval="(DateTime.now() - relativedelta(months=1)).strftime('%Y-%m-%d')"/>
            <field name="certificate_description">Certificate in English communication skills</field>
            <field name="course_name">English Communication</field>
        </record>
        
    </data>
</odoo>
